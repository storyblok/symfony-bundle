{
  "name": "storyblok/symfony-bundle",
  "description": "Symfony bundle for storyblok/php-management-api-client and storyblok/php-content-api-client",
  "license": "MIT",
  "type": "symfony-bundle",
  "authors": [
    {
      "name": "Silas Joisten",
      "email": "silasjoisten@proton.me"
    }
  ],
  "require": {
    "php": ">=8.3",
    "oskarstark/enum-helper": "^1.6",
    "psr/log": "^3.0",
    "storyblok/php-content-api-client": ">=1.15.0",
    "storyblok/php-image-service": ">=0.5.0",
    "storyblok/php-tiptap-extension": "^1.0",
    "symfony/config": "^6.0 || ^7.0 || ^8.0",
    "symfony/console": "^6.0 || ^7.0 || ^8.0",
    "symfony/dependency-injection": "^6.0 || ^7.0 || ^8.0",
    "symfony/filesystem": "^6.0 || ^7.0 || ^8.0",
    "symfony/finder": "^6.0 || ^7.0 || ^8.0",
    "symfony/framework-bundle": "^6.0 || ^7.0 || ^8.0",
    "symfony/http-client": "^6.0 || ^7.0 || ^8.0",
    "symfony/http-kernel": "^6.0 || ^7.0 || ^8.0",
    "symfony/monolog-bundle": "^3.10",
    "symfony/string": "^6.0 || ^7.0 || ^8.0",
    "thecodingmachine/safe": "^2.0 || ^3.0",
    "twig/twig": "^3.20",
    "webmozart/assert": "^1.11 || ^2.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.2",
    "ergebnis/data-provider": "^3.4",
    "ergebnis/php-cs-fixer-config": "^6.28",
    "matthiasnoback/symfony-config-test": "^6.0",
    "phpstan/extension-installer": "^1.0",
    "phpstan/phpstan": "^2.0",
    "phpstan/phpstan-webmozart-assert": "^2.0",
    "phpunit/phpunit": "^12",
    "rector/rector": "^2.0",
    "symfony/event-dispatcher": "^6.0 || ^7.1 || ^8.0",
    "thecodingmachine/phpstan-safe-rule": "^1.4"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Storyblok\\Bundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Storyblok\\Bundle\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": true
  },
  "scripts": {
    "license-check": "php license-checker.php"
  }
}
